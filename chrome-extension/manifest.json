{
  "manifest_version": 3,
  "name": "FB Lead Hunter (SaaS)",
  "version": "1.0",
  "description": "Auto-detects keywords in FB Groups and sends Telegram alerts.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://*.facebook.com/*", "http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}